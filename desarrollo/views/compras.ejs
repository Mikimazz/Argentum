<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('./partials/head') %>
    <script src="https://kit.fontawesome.com/609c07c1d3.js" crossorigin="anonymous"></script>
    <!-- <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" /> -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/css/nav.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/compras.css" />
    <script>
      let i = 1;
      function incrementar() {
        i++
        document.getElementById('quantity').value = i;
      }

      function decrementar() {
        i--
        document.getElementById('quantity').value = i;
      }

    </script>
    <title>Carrito de compras</title>
</head>

<body>
  <header>
    <%- include("./partials/header.ejs") %>
  </header>
  <main>
    <!-- INICIA BARRA CARRITO -->

    <div class="ubica-barra">
      <div class="navegador">
        <div class=""><a href="/cart" class="mis-compras">Mis Compras</a></div>
        <div class=""><a href="/envio" class="envios">Envíos</a></div>
        <div class=""><a href="/pago" class="pagos">Pagos</a></div>
      </div>
    </div>
    <!-- FINALIZA BARRA CARRITO -->
    <h3 class="mb-20 pt-20 ml-20">Productos seleccionados:</h3>
    <!-- Inicio contenedor -->
    <div class="contenedor ">
      <div class="contenedor1">
        <!-- Inicio articulo -->
        <form action="/cart/add" method="post">
          <input type="hiden" name="hiden" id="<%- art.id %>  ">
          <article id="article">
            <table class="table-articulo pb-10 w-80 border-collapse text-center" id="tabla">
              <tr class="bk-tabla line-bottom ">
                <td class="td-imagen">
                  <img class="height-width-img" src="/images/products/<%= art.imagen %>" alt="<%= art.nombre %>" />
                </td>
                <td class="td-producto">
                  <p class=" text-center ft-weight articulo">
                    <%= art.nombre %>
                  </p>
                </td>
                <td class="td-precio">
                  <p class=" text-center precio">$<%= art.precio %>
                  </p>
                </td>
                <td class="td-cantidad">
                  <div class="ds-flex js-cont-center align-items">
                    <button class="button" onclick="incrementar();"><i
                        class="fas fa-caret-square-left ft-size-less botonsb" id="btnSube"></i></button>
                    <input class="ft-size-number pr-10 pl-10 ft-weight numero" id="quantity" min="0" type="number"
                      value="1" disabled>
                    <button type="submit" class="button" onclick="decrementar()"><i
                        class="fas fa-caret-square-right ft-size-more botonsb" id="btnBaja"></i></button>
                  </div>
                </td>
                <td class="td-basura text-align">
                  <a href="" id="basurero" class="basurero" onclick="function basurero()"><i
                      class="fas fa-trash-alt"></i></a>
                </td>
              </tr>
            </table>
          </article>
        </form>
      </div>
      <!-- Inicio resumen -->
      <div class="contenedor2 text-center">
        <table class="resumen line-height ft-size-text">
          <h4 class="text-align pb-10">RESUMEN:</h3>
            <div class="ft-weight text-center text-align pb-10">
              <label for="descuento">Ingrese código de descuento:</label>
            </div>
            <div class="pb-10 text-center">
              <input type="text" class="desc" name="descuento" id="descuento" />
            </div>
            <div>
              <tr>
                <td class="w-100 text-left">SUBTOTAL</td>
                <td class="text-right">$<%= art.precio  %>
                </td>
              </tr>
              <tr>
                <td class="text-left line-total">ENVIO</td>
                <td class="text-right line-total">Gratis</td>
              </tr>
              <tr>
                <td class="ft-weight text-left">TOTAL</td>
                <td class="ft-weight text-right">
                  $<%= art.precio %>
                </td>
              </tr>
            </div>
        </table>
        <div class="text-align mb-20">
          <a href="/envio"><button class="btn-acepta">Confirmar compra</button></a>
          <a href="/"><button class="btn-cancela mb-10">Cancelar</button></a>
          <a href="/"><button class="btn-seguirComp mb-20">Seguir comprando</button></a>

        </div>
        <!-- Fin resumen -->
      </div>

  </main>
  <footer>
    <%- include("./partials/footer") %>
  </footer>
</body>

</html>